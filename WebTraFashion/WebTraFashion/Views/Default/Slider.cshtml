@using System.Configuration

@{

    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<div class="header_modules">
    <div class="fluid_container">
        <div class="camera_container">
            <div id="camera_wrap_0">

                @foreach (var item in Model)
                {
                    <div title="slide-1" data-thumb="@ConfigurationManager.AppSettings["domain"]@item.img_slide_tra.ToString().Split('_')[0]/@item.img_slide_tra" data-src="@ConfigurationManager.AppSettings["domain"]@item.img_slide_tra.ToString().Split('_')[0]/@item.img_slide_tra">
                        <div class="camera_caption fadeIn">
                            <div class="container">
                                <h1 class="mod1">
                                    THE LARGEST
                                    <span>@item.title_slide_tra</span>
                                </h1>
                                <div class="separator"></div>
                                <p>
                                    @item.des_slide_tra
                                </p>
                                <a class="button">Shop now!</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="clear"></div>
    </div>
</div>
