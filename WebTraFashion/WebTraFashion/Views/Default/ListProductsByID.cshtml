
@using PagedList
@using WebTraFashion.Models
@using PagedList.Mvc
@using System.Linq;
@using System.Web;
@using System.Web.Mvc;
@using System.Configuration
@model PagedList.IPagedList<ClassAll>

<div id="loader">
    <div class="col-sm-9 right_aside" id="content">
        <h2 class="mod1">
            @foreach (var item in Model.Take(1))
            {
                if (item.tblProdu.type_products_tra == 1)
                {
                    @("Ví")
                }
                if (item.tblProdu.type_products_tra == 2)
                {
                    @("Balo")
                }
                if (item.tblProdu.type_products_tra == 3)
                {
                    @("Vali")
                }
                if (item.tblProdu.type_products_tra == 4)
                {
                    @("Phụ kiện")
                }
                if (item.tblProdu.type_products_tra == 5)
                {
                    @("Sale")
                }
                if (item.tblProdu.type_products_tra == 6)
                {
                    @("Túi xách")
                }
            }

        </h2>
        <div class="separator1"></div>
        <div class="row">

            <div class="col-sm-12 cat_desc">
                @foreach (var item in Model.Take(1))
            {
                if (item.tblProdu.type_products_tra == 1)
                {
                        <p>
                            ZARA
                            “tôi thích nhãn hiệu zara, tôi thích thay đổi nhưng cực chất cùng ZARA”
                            nhãn hiệu ZARA được người mỹ ưa chuộng nhất. ZARA đáp ứng nhu cầu lớn thời trang hiện đại, với nhiều mẫu thiết kế mới luôn được cập nhật theo các xu hướng mới nhất.

                        </p>
                    }
                    if (item.tblProdu.type_products_tra == 2)
                    {
                        <p>

                        </p>
                    }
                    if (item.tblProdu.type_products_tra == 3)
                    {
                        <p>

                        </p>
                    }
                    if (item.tblProdu.type_products_tra == 4)
                    {
                        <p>

                        </p>
                    }
                    if (item.tblProdu.type_products_tra == 5)
                    {
                        <p>

                        </p>
                    }
                    if (item.tblProdu.type_products_tra == 6)
                    {
                        <p>
                            Bạn cần tìm CHARLES KEITH, bạn phải qua Singapore để mua? không cần tốn thời gian, chi phí đi lại, chúng tôi sẽ đem CHARLES KEITH đến tận nhà bạn. hãy tin ở chúng tôi.
                        </p>
                    }
                }
               
              
            </div>
        </div>


        <div class="product-filter clearfix cusproduct-filter">

        </div>
        <div class="row pages_info">
            <div class="col-sm-6 text-left">
                <ul class="pagination">
                    @Html.PagedListPager((IPagedList)Model, page => Url.Action("PartialDemo", "Default", new { page }),
                        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { UpdateTargetId = "loader" }))
                </ul>
            </div>

        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="product-layout product-grid col-lg-4 col-md-4 col-sm-4 col-xs-12">

                    <div class="product-thumb transition options">


                        <div class="quick_info hidden-xs">
                            <div id="quickview_latest_@item.tblProdu.id_products_tra" class="quickview-style">
                                <div>
                                    <div class="left col-sm-4">
                                        <div class="quickview_image image">
                                            <a href="@Url.Action("Detail","Default",new { id=item.tblProdu.name_products_tra.UrlFrendly() + "-" + item.tblProdu.id_products_tra })">

                                                <img alt="@item.tblProdu.name_products_tra" title="@item.tblProdu.name_products_tra" class="img-responsive" src="@ConfigurationManager.AppSettings["domain"]@item.tblPicture.originalFilepath.ToString().Split('_')[0]/@item.tblPicture.originalFilepath" />
                                            </a>
                                        </div>
                                    </div>
                                    <div class="right col-sm-8">
                                        <h2>@item.tblProdu.name_products_tra</h2>
                                        <div class="inf">
                                            <p class="product_model model">Model: @item.tblProdu.code_products_tra</p>
                                            <span class="price-new">
                                                <script>
                                                $(function () {

                                                    $('.price-new').text(tien(@item.tblProdu.newprice_products_tra) + ' ' + 'đ');
                                                }) </script>
                                            </span>

                                            <span class="price-old">
                                                <script>
                                                    $(function () {

                                                        $('.price-old').text(tien(@item.tblProdu.oldprice_products_tra)+' '+'đ');
                                                    })
                                                </script>

                                            </span>
                                        </div>
                                        <div class="rating">
                                            <span class="fa-stack">
                                                <i class="material-icons-star   fa-stack-1x"></i>
                                                <i class="material-icons-star star  fa-stack-1x"></i>
                                            </span>
                                            <span class="fa-stack">
                                                <i class="material-icons-star   fa-stack-1x"></i>
                                                <i class="material-icons-star star  fa-stack-1x"></i>
                                            </span>
                                            <span class="fa-stack">
                                                <i class="material-icons-star   fa-stack-1x"></i>
                                                <i class="material-icons-star star  fa-stack-1x"></i>
                                            </span>
                                            <span class="fa-stack">
                                                <i class="material-icons-star   fa-stack-1x"></i>
                                                <i class="material-icons-star star  fa-stack-1x"></i>
                                            </span>
                                            <span class="fa-stack">
                                                <i class="material-icons-star   fa-stack-1x"></i>
                                                <i class="material-icons-star star  fa-stack-1x"></i>
                                            </span>
                                        </div>
                                        <button class="product-btn-add" data-toggle="tooltip" title="Mua hàng" type="button">
                                            <i class="mat-icons material-icons-shopping_basket"></i>
                                            <span>Mua hàng</span>
                                        </button>
                                        <ul class="product-buttons">
                                            <li>
                                                <button class="btn btn-icon" type="button" data-toggle="tooltip" title="Add to Wish List">
                                                    <i class="mat-icons material-icons-favorite_border"></i>
                                                    <span>Add to Wish List</span>
                                                </button>
                                            </li>
                                            <li>
                                                <button class="btn btn-icon" type="button" data-toggle="tooltip" title="Compare this Product">
                                                    <i class="mat-icons material-icons-sort"></i>
                                                    <span>Compare this Product</span>
                                                </button>
                                            </li>
                                        </ul>
                                        <div class="clear"></div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="quickview_description description">
                                            <p style="white-space:pre-line;">
                                                @item.tblProdu.des_products_tra
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="new_pr"><span>New</span></div>

                        <div class="aside-block">
                            <div class="image">
                                <a class="quickview quickview-latest hidden-xs" data-rel="details" href="#quickview_latest_@item.tblProdu.id_products_tra">
                                    Xem nhanh
                                </a>
                                <a class="lazy" style="padding-bottom: 100%" href="@Url.Action("Detail","Default",new { id=item.tblProdu.name_products_tra.UrlFrendly() + "-" + item.tblProdu.id_products_tra })">

                                    <img alt="@item.tblProdu.name_products_tra" title="@item.tblProdu.name_products_tra" class="img-responsive" src="@ConfigurationManager.AppSettings["domain"]@item.tblPicture.originalFilepath.ToString().Split('_')[0]/@item.tblPicture.originalFilepath" />
                                </a>
                            </div>
                            <div class="caption">
                                <div class="name">
                                    <a href="@Url.Action("Detail","Default",new { id= item.tblProdu.name_products_tra + "-" + item.tblProdu.id_products_tra })">
                                        @item.tblProdu.name_products_tra
                                    </a>
                                </div>

                                <span class="price-new">
                                    <script>
                                                $(function () {

                                                    $('.price-new').text(tien(@item.tblProdu.newprice_products_tra) + ' ' + 'đ');
                                                }) </script>
                                </span>

                                <span class="price-old">
                                    <script>
                                                    $(function () {

                                                        $('.price-old').text(tien(@item.tblProdu.oldprice_products_tra)+' '+'đ');
                                                    })
                                    </script>

                                </span>
                            </div>
                            <div class="cart-button">
                                <div class="rating">
                                    <span class="fa-stack">
                                        <i class="material-icons-star   fa-stack-1x"></i>
                                        <i class="material-icons-star star  fa-stack-1x"></i>
                                    </span>
                                    <span class="fa-stack">
                                        <i class="material-icons-star   fa-stack-1x"></i>
                                        <i class="material-icons-star star  fa-stack-1x"></i>
                                    </span>
                                    <span class="fa-stack">
                                        <i class="material-icons-star   fa-stack-1x"></i>
                                        <i class="material-icons-star star  fa-stack-1x"></i>
                                    </span>
                                    <span class="fa-stack">
                                        <i class="material-icons-star   fa-stack-1x"></i>
                                        <i class="material-icons-star star  fa-stack-1x"></i>
                                    </span>
                                    <span class="fa-stack">
                                        <i class="material-icons-star   fa-stack-1x"></i>
                                        <i class="material-icons-star star  fa-stack-1x"></i>
                                    </span>
                                </div>
                                <div class="btns-block">
                                    <button class="product-btn-add" data-toggle="tooltip" title="Mua hàng" type="button">
                                        <i class="mat-icons material-icons-shopping_basket"></i>
                                        <span class="hidden-xs hidden-sm hidden-md">Mua hàng</span>
                                    </button>
                                    <button class="product-btn-add" data-toggle="tooltip" title="Mua hàng" type="button">
                                        <i class="mat-icons material-icons-shopping_basket"></i>
                                        <span class="hidden-xs hidden-sm hidden-md">Đặt hàng</span>
                                    </button>
                                    <button class="product-btn" type="button" data-toggle="tooltip" title="Add to Wish List">
                                        <i class="mat-icons material-icons-favorite_border"></i>
                                    </button>
                                    <button class="product-btn" type="button" data-toggle="tooltip" title="Compare this Product">
                                        <i class="mat-icons material-icons-sort"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>

                </div>
            }



        </div>
        <div class="row pages_info mod1">
            <div class="col-sm-6 text-left">
                <ul class="pagination">
                    @Html.PagedListPager((IPagedList)Model, page => Url.Action("PartialDemo", "Default", new { page }),
                        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { UpdateTargetId = "loader" }))
                </ul>
            </div>

        </div>
    </div>
</div>
